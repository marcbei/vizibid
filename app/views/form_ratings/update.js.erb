$('div#ratingstext').replaceWith("<br/><br/><h4>Your rating:</h4>");

<% if !@form.average_rating.nan? %>
	<% @rating = @form.average_rating.round(2).to_s %>
<% else %>
	<% @rating = "Document has no ratings." %>
<% end %>

$('.averagerating').replaceWith("<div class=\"averagerating\" style=\"Display: inline;\"> <%= escape_javascript(@rating) %> </div>");