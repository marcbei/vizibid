<div class="span4 dashboard"  style="border: 1px solid #ddd;">
	<h4 style="padding-left: 10px;">Your Activity</h4>
	<p>
		<% if params[:tab] == "followed" %>
			<%= render 'pages/home_partials/followed_dashboard_content' %>
		<% elsif params[:tab] == "requests" %>
			<%= render 'pages/home_partials/requests_dashboard_content' %>
		<% else %>
			<ul>
				<li>
					uploaded <%= pluralize(current_user.forms.count, "document") %>
				</li>
				<li>
					submitted <%= pluralize(current_user.comments.count,"comment") %> 
				</li>
				<li>
					submitted <%= pluralize(current_user.form_requests.count, "request") %> 
				</li>
				<li>
					replied to <%= pluralize(current_user.request_submissions.count, "request") %> 
				</li>
				<li>
					subscribed to <%= pluralize(current_user.practice_areas.count, "practice area") %> 
				</li>
			</ul>
		<% end %>
	</p>
</div>