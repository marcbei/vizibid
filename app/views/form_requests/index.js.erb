<% if params[:scope] == "open" %>
	$(".fulfilled-requests").removeClass('active');
	$(".open-requests").addClass('active');
<% elsif params[:scope] == "fulfilled" %>
	$(".open-requests").removeClass('active');
	$(".fulfilled-requests").addClass('active');
<% end %>

$('.request-content').replaceWith("<%= escape_javascript(render 'pages/home_partials/requests_tab_content', :form_requests => @form_requests)%>");