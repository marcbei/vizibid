<div id="deleteformmodal<%=formrequest.id%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="well">
		<h4>Are you sure you want to delete this request?</h4>
		<%= button_to "Delete Request", form_request_path(formrequest.id), :method => :delete, :class => "btn btn-danger" %>
		<button class = "btn" data-dismiss = "modal" >Cancel</button>

	</div>
</div>

<a class = "btn btn-danger btn-mini" style = "width: 40px;" data-toggle="modal" href="#deleteformmodal<%=formrequest.id%>" >Delete</a>



