<% user = User.find_by_id(f.user_id) %>

<div>
	<% if user != nil %>
		<% name = user.name.gsub(' ', '_') %>
		<strong><%= link_to user.name, usershow_path(name.downcase) %></strong>
	<% end %>
	<span class="timestamp"><%= time_ago_in_words(f.created_at) %> ago</span><br/>
	<% if f.comment != nil %>
		<span class="content"><%= f.comment %></span><br/>
	<% else %>
		<span class="content"><%= f.form.description %></span><br/>
	<% end %>
	<% if f.form %>
		<em>associated document:</em> <%= link_to f.form.description, form_path(f.form) %>
	<% end %>
</div>

