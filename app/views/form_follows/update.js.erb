<% if @following == true %>
	$('.follow-button').html('following');
	$('.follow-button').addClass('btn-info');
	$('.follow-button').addClass('follow-button-following');
<% else %>
	$('.follow-button').html('follow');
	$('.follow-button').removeClass('btn-info');
	$('.follow-button').removeClass('follow-button-following');
<% end %>