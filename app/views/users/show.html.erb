<% provide(:title, @user.name) %>
<div class = "container">
<div class = "row span6">
<br/><br/>
<b><%= @user.name %></b>, Vizibid user since <%= @user.created_at.strftime("%B %d, %Y") %>
<br/>
Email: <%= mail_to @user.email%>
<br/>
<% if !@user.user_detail.website.nil? %>
	Website: <%= link_to @user.user_detail.website, @user.user_detail.website %><br/>
<% end %>

<% if !@user.user_detail.location.nil? %>
	Location: <%= @user.user_detail.location %><br/>
<% end %>

<% if !@user.user_detail.practice_area.nil? %>
	Practice Area: <%= @user.user_detail.practice_area %><br/><br/>
<% end %>

<% if !@user.user_detail.bio.nil? %>
	Bio: <%= @user.user_detail.bio %><br/>
<% end %>

</br>
<% if @formdownloads_count > 0 %>
Downloaded <%= @formdownloads_count %> documents
<% else %>
0 documents downloaded
<% end %>
<br/> <br/>

<% if @formshared_count > 0 %>
Shared the following (<%= @formshared_count %>) documents:

<ul>
	<% i = @formshared_count-1 %>
	<% while i  >= 0 %>
		<li>
			<%= link_to @formshared[i].name, form_path(@formshared[i].id)%> on <%= time_ago_in_words(@formshared[i].created_at) %> ago</li>
		</li>
		<% i = i-1 %>
	<%end%>
</ul>
<% else %>
0 documents shared
<% end %>
</div>
</div>