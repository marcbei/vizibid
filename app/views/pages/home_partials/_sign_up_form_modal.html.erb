<div id="signupModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class = "well">
	    <div class = "row">
	      	<div class="span6">
				<strong class = "pull-left">Sign Up and Try It For Free</strong> <br/><br/>
				<%= form_for(@user, :validate => true) do |f| %>

					<%= f.text_field :name, :placeholder => "name (required)" %>
					<%= f.text_field :email, :placeholder => "email (required)" %>
					<%= f.label "State Licensed (required)", :class => "pull-left" %>
					<%= f.select :state_licensed, options_for_select(options_for_state_licensed) %>
					<%= f.text_field :bar_number, :placeholder => "bar id number (required)" %>
					<%= f.password_field :password, :placeholder => "password (required)" %>
			  		<%= f.password_field :password_confirmation, :placeholder => "repeat password (required)" %>
			  		<%= f.text_field :referrer, :placeholder => "Who referred you? (optional)" %>
			  		<br/>
			  		<%= f.submit "Sign Up For Vizibid", class: "btn btn-info pull-left" %>
			  		<div style="margin-left: 150px;">
				  		<%= f.submit :cancel, :class => "btn", :'data-dismiss' => "modal" %>
			  		</div>
				<% end %>
			</div>
		</div>
	</div>
</div>