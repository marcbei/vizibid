<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <% @feedback = UserFeedback.new %>
  <div class="well">
      <p>Please let us know any feedback you have for us. We'll be sure to read it and respond.</p>
      <%= form_for @feedback do |f| %>
        <%= f.label :subject %>
        <%= f.text_field :subject%>
        <%= f.label :comments %>
        <%= f.text_area :comment, :size => "5x10" %>
        <%= f.submit :submit, :class => "btn btn-info", :style => "margin-right:5px;"%>
        <%= f.submit :cancel, :class => "btn", :'data-dismiss' => "modal" %>
      <% end %>
  </div>

</div>

<div class = "offset6">
  Your feedback is valuable!&nbsp;
  <a style = "color: green;" data-toggle="modal" href="#myModal" >Send us a suggestion</a>
</div>