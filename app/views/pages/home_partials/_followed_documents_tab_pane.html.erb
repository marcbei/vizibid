<div class="tab-content-root">
  <% if @followedforms.count > 0 %>
    <div class="tabbable tabs-left">
      <ul class="nav nav-tabs span4">
        <% i = 0 %>
        <% @followedforms.each do |ff| %>
          <li class="<% if i == 0 %> active <% end %>">
            <a href="#r<%= i %>" data-toggle="tab"><%= ff.form.name %></a>
          </li>
          <% i = i + 1 %>
        <% end %>
      </ul>
      <div class="tab-content span7">
        <% i = 0 %>
        <% @followedforms.each do |ff| %>
           <div class="tab-pane <% if i == 0 %> active <% end %>" id="r<%= i %>">
            <div>
              <%= link_to :"Open Document", form_path(ff.form.id), :class => "btn btn-info" %>
            </div>
            <div style = "margin-top: 10px;">
              updated <%= time_ago_in_words(ff.form.created_at) %> ago <br/>
              <% name = ff.form.user.name.gsub(' ', '_') %>
              shared by <%= link_to ff.form.user.name, usershow_path(name.downcase) %>
            </div>
           </div>
           <% i = i + 1 %>
        <% end %>
      </div>
    </div>
  <% else %>
    You are not following any documents. Click the 'follow' button on a document page to start following.
  <% end %>
</div>