<!-- Search Box -->
<%= render 'forms/search' %>
<div class="row-fluid">
	<!-- tabbable window panes -->
	<div class= "span8">
		<!-- Search Results -->
		<% if @forms != nil %>
			<h3><%= pluralize(@total_forms, 'result') %>:</h3><br/>
				<% @i = 1 %>
				<% @forms.each do |f| %>
				<tr>
			      <td><%= render 'forms/form_summary', :f => f %></td>
			 	</tr>
				<% @i += 1 %>
					<% if @i < @forms.count+1 %>
					<hr/>
				<% end %>
			<% end %>
			<%= will_paginate(@forms) %>
		<% else %>
			<div class="tabbable"> 
			  <ul class="nav nav-tabs">
			    <li class="contribute active"><%= link_to :Contribute, root_path(:tab => "contribute"), :remote => true%></li>
			    <li class="requests"><%= link_to :"Your Requests", root_path(:tab => "requests"), :remote => true%></li>
			    <li class="followed"><%= link_to :"Followed Documents", root_path(:tab => "followed"), :remote => true%></li>
			    <li class="subscription"><%= link_to :Subscriptions, root_path(:tab => "subscription"), :remote => true%></li>
			  </ul>
			  <div class="tab-content-root">
			      <%= render 'pages/home_partials/contribute_tab_pane' %>
			  </div>
			</div>
		<% end %>
	</div>
	<div class="span4" style="border: 1px solid #ddd;">
		<h4 style="padding-left: 10px;">Your Dashboard</h4>
		<p>
			<ol>
				<li>num docs uploaded</li>
				<li>num comments</li>
				<li>doc updates</li>
				<li>comment upvotes</li>
			</ol>
		</p>
		<p class="center">
			<em>[Your Contribution Stats]</em>
		</p>
	</div>
</div>