<% provide(:title, 'History') %>

<div class = "container">
	<h1>History</h1>
	<h3> Downloaded Documents </h3>
	<% if @formdownloads.count > 0 %>
	<ul class="unstyled">
		<% i = @formdownloads.count-1 %>
		<% while i  >= 0 %>
			<li><%= link_to @formdownloads[i].name, form_path(@formdownloads[i].id)%> on <%= time_ago_in_words(@fd[i].created_at) %> ago</li>
			<% i = i-1 %>
		<%end%>
	</ul>
	<% else %>
		0 documents downloaded<br/><br/>
	<% end %>

	<h3> Shared Documemts </h3>
	<% if @uploadedforms.count > 0 %>
	<ul class="unstyled">
		<% i = @uploadedforms.count-1 %>
		<% while i  >= 0 %>
			<li>
				<%= link_to @uploadedforms[i].name,form_path(@uploadedforms[i].id)%> on <%= time_ago_in_words(@uploadedforms[i].created_at) %> ago</li>
			</li>
			<% i = i-1 %>
		<%end%>
	</ul>
	<% else %>
		0 documents uploaded<br/><br/>
	<% end %>
	
	<h3> Requests </h3>
	<% if @formrequests.count > 0 %>
		<ul class="unstyled">
			<% i = @formrequests.count-1 %>
			<% while i  >= 0 %>
				<li>
					<%= link_to @formrequests[i].name,form_request_path(@formrequests[i].id)%> on <%= time_ago_in_words(@formrequests[i].created_at) %> ago</li>
				</li>
				<% i = i-1 %>
			<%end%>
		</ul>
	<% else %>
		0 requests<br/><br/>
	<% end %>

	<h3> Comments </h3>
	<% if @comments.count > 0 %>
		<ul class="unstyled">
			<% i = @comments.count-1 %>
			<% cform_id = -1 %>
			<% while i  >= 0 %>
				<% if cform_id != @comments[i].form.id %>
					<%= link_to @comments[i].form.name, form_path(@comments[i].form) %>
				<% end %>
				<li>
					<%= truncante_description(@comments[i].content) %> on <%= time_ago_in_words(@comments[i].created_at) %> ago
				</li>
				<% cform_id = @comments[i].form.id %>
				<% i = i-1 %>
			<%end%>
		</ul>
	<% else %>
		0 comments <br/><br/>
	<% end %> 

</div>