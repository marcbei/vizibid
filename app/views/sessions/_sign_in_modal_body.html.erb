<div id="signin" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="width:300px;">
	<div class = "well">
		<strong>Sign-In</strong><br/><br/>
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.text_field :email, :placeholder => "email" %>
			<%= f.password_field :password, :placeholder => "password"  %>

			<%= f.submit "Sign in", class: "btn btn-primary" %>
		<% end %>
		<%= link_to "Forgot your password?", new_password_reset_path %>
	</div>
</div>