<div class="header-signin-form" style = "margin-top: 30px">
	<%= form_for(:session, url: sessions_path) do |f| %>
		<%= f.text_field :email, :placeholder => "email", :style => "width: 150px;margin-top: 15px;" %>
		<%= f.password_field :password, :placeholder => "password", :style => "width: 110px; margin-top: 15px;"  %>

		<%= f.submit "Sign in", class: "btn btn-info btn-small" %>
	<% end %>
	<%= link_to "Forgot your password?", new_password_reset_path %>
</div>