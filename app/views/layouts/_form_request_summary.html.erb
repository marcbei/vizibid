<%=@i%>. <%= link_to f.name, f %>

<%# if showstatus ==  "true" %>
	<% if f.fufilled == true %>
		&nbsp;&nbsp;&nbsp;&nbsp;<strong>Request Completed</strong>
	<% else %>
		&nbsp;&nbsp;&nbsp;&nbsp;
		<%= f.forms.count %>
		<% if f.forms.count == 0 %>
			submissions
		<%else%>
			submission
		<%end%>
		 
	<% end %>
<%# end %>

<br/>

<% if f.jurisdiction %>
	<em><%= f.jurisdiction %></em>
<% end %>

&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
Requested <%= time_ago_in_words(f.created_at) %> ago

<% if showstatus !=  "true" %>
	<% if f.anonymous == true %>
		(anonymous)
	<% else %>
		by <%=link_to f.user.name, user_path(f.user.id)%>
	<% end %>
<% end %>

<br/>
<% if f.description %>
	<%= truncante_description(f.description) %>...
<% end %>



