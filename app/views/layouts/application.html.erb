<!DOCTYPE html>
<html>
<head>
  <title>Vizibid | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%# yield :scripts %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class = "container maincontent" style="margin-top: 80px; margin-bottom: 30px;" >
		
		<% flash.each do |key, value| %>
			<div class="alert alert-<%= key %>" style="margin-top: 5px; margin-bottom: 15px;">
				<button type="button" class="close alert-<%= key %> flashclose" data-dismiss="alert" style = "border: none;">Ã—</button>
	  			<div><%= value %></div>
			</div>
		<% end %>

		<% if signed_in? %>
			<%= render 'pages/home_partials/user_feedback_form_modal' %>
			<br/>
		<% end %>
		
		<%= yield %>
		
		<!-- this is required so the modal is in the maincontent div -->
		<%= render 'layouts/noaccess_share_modal' %>
		<%#= render 'sessions/sign_in_modal_body' %>
		
		<%#= debug(params) if Rails.env.development? %>
	</div>
	<%= render 'layouts/footer' %>
</body>
</html>
