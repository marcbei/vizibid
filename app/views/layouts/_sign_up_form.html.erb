
<div class = "well">
	<%= form_for(:session, url: sessions_path) do |f| %>

		<%= f.text_field :email, :placeholder => "email" %>
		<%= f.password_field :password, :placeholder => "password"  %>

		<%= f.submit "Sign in", class: "btn btn-primary" %>
	<% end %>
	<%= link_to "Forgot your password?", new_password_reset_path %>
</div>
<div class = "well">
	<strong>New to Vizibid?</strong> Sign-Up <br/><br/>
	<%= form_for(@user, :validate => true) do |f| %>

		<%= f.text_field :name, :placeholder => "name" %>
		<%= f.text_field :email, :placeholder => "email" %>
		<%= f.label "State Licensed" %>
		<%= f.select :state_licensed, options_for_select(options_for_state_licensed) %>
		<%= f.password_field :bar_number, :placeholder => "bar id number" %>
		<%= f.password_field :password, :placeholder => "password" %>
  		<%= f.password_field :password_confirmation, :placeholder => "repeat password" %>

  		<%= f.submit "Sign Up For Vizibid", class: "btn btn-warning" %>
	<% end %>
</div>