<div class = "row-fluid">
	<div class="span8 well">
		<h1>Welcome to Vizibid!</h1>
		<h2>Vizibid helps lawyers find, share, rate, and comment on model forms for legal documents. </h2> 
	</div>
	<div class="span3 offset8">
		<div class = "well">
			<%= form_for(:session, url: sessions_path) do |f| %>

				<%= f.text_field :email, :placeholder => "email" %>
				<%= f.password_field :password, :placeholder => "password"  %>

				<%= f.submit "Sign in", class: "btn btn-primary" %>
			<% end %>
		</div>
		<div class = "well">
			<strong>New to Vizibid?</strong> Sign-Up <br/><br/>
			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages' %>

				<%= f.text_field :name, :placeholder => "name" %>
				<%= f.text_field :email, :placeholder => "email" %>
				<%= f.password_field :password, :placeholder => "password" %>
	      		<%= f.password_field :password_confirmation, :placeholder => "repeat password" %>

	      		<%= f.submit "Sign Up For Vizibid", class: "btn btn-warning" %>
		<% end %>
		</div>
	</div>
</div>