<% if signed_in? %>
  <header class="navbar navbar-fixed-top">
<% else %>
  <header class="navbar nsignedout">
<% end %>
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Vizibid", root_path, :id => "logo" %>
      <nav>
          <% if signed_in? %>
          <ul class="nav nav-pills pull-right">
              <li class="divider-vertical">
              <li class="<%= 'active' if current_page?(root_path) %>">
                <%= link_to "Search", root_path %>
              </li> 
              <li class="<%= 'active' if current_page?(requestcenter_path) %>">
                <%= link_to "Request Center", requestcenter_path %>
              </li>
              <li class="<%= 'active' if current_page?(share_path) %>">
                <%= link_to "Share", share_path %>
              </li>
              <li class="<%= 'active' if current_page?(history_path) %>">
                <%= link_to "History", history_path %>
              </li>
              <li class="divider-vertical">
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <%= @current_user.name %> <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to "My Requests", :controller => "pages", :action => "requestcenter", :scope => "me" %></li>
                  <li><%= link_to "Profile", current_user %></li>
                  <li><%= link_to "Account Settings", '#' %></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
              <li class="divider-vertical">
          </ul>
        <% end %>
      </nav>
    </div>
  </div>
</header>