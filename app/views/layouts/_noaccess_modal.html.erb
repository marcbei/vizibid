<% if type == "download" %>
	<a class= "downloadlink" data-toggle="modal" href="#noaccessModal_<%=type%>" data-backdrop="static" >Download</a>
<% elsif type == "request" %>
	<a data-toggle="modal" href="#noaccessModal_<%= type %>" data-backdrop="static" >Request a Document</a>
<% elsif type == "myreqs" %>
	<a data-toggle="modal" href="#noaccessModal_<%= type %>" data-backdrop="static" >View My Requests</a>
<% elsif type == "forum_post" %>
	<a style = "color: green;" data-toggle="modal" href="#noaccessModal_<%= type %>" >New Post</a>
<% end %>

<div id="noaccessModal_<%= type %>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="width:300px; margin: -250px 0 0 -150px;">
	<div class="well">
		<h3>You are not permitted to access this feature. Please upgrade your account to gain access.</h3>
		<%= button_tag :upgrade, :class => "btn btn-info", :'data-dismiss' => "modal" %>
		<%= button_tag :cancel, :class => "btn", :'data-dismiss' => "modal" %>
	</div>
</div>