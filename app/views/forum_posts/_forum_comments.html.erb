<ul class="comments">
	<% if @sort_by == "new" %>
		<%= nested_forum_comments @post.forum_comments.arrange(:order => "created_at desc") %>
	<% elsif @sort_by == "old" %>
		<%= nested_forum_comments @post.forum_comments.arrange(:order => "created_at asc") %>
	<% else %>
		<%= nested_forum_comments @post.forum_comments.arrange(:order => "score desc") %>
	<% end %>
</ul>