<% provide(:title, 'Form Details')%>

<div class = "container">
<br/> 
<div class="row">
	<H1><%= File.basename(@form.form.url, File.extname(@form.form.url)) %></H1>
	Contributed by: <%= @user %>
	<br/>Form Downloaded <%= @form.num_downloads %> times</br>
</div>
<br/>
<br/>
<div class = "row">
	<div class = "span5">
		<%= link_to "Click to Download", {:controller => "forms", :action =>"download", :id => @form.id}, :class => "downloadlink", :target => "_blank"%>
		<%= form_for(@comment) do |f| %>
		  <div class="commentfield">
		    <%= f.text_area :content, placeholder: "Compose new comment..." %>
		  </div>
		  <%= hidden_field_tag(:form_id, @form.id) %>
		  <%= f.submit "Submit", class: "btn btn-medium btn-primary" %>
		<% end %>
	</div>
	<div class="span3 offset1">
		<% if @form.comments.any? %>
		<h3>Comments:</h3>
		<ul class="comments">
			<% @form.comments.each do |comment| %>
				<li>
					<h4><span class="content"><%= comment.content %></span></h4><br/>
					<span class="content">by <%= comment.user.name %></span>
					<span class="timestamp"><%= time_ago_in_words(comment.created_at) %> ago</span>
				</li>
			<% end %>
		</ul>
		<% else %>
			<h3>Please let us know what you think of this form. </h3>
		<% end %>
	</div>
</div>
</div>


