$('.comments').replaceWith("<%= escape_javascript(render 'layouts/form_comments' )%>");

$('.commentmodallink').off('click');
$('.upload').off('click');

$('.uploadform').hide();
$('.upload').attr('checked', false);

$('.upload').click (function() {
   $('.uploadform').toggle();
});

$('.commentmodallink').click (function() {
    $('.uploadform').hide();
    $('.upload').attr('checked', false);
});