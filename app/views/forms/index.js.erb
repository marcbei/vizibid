<% if params[:sort] == "newest" %>
	$(".newest-items").addClass('active');
	$(".activity-items").removeClass('active');
<% elsif params[:sort] == "activity" %>
	$(".newest-items").removeClass('active');
	$(".activity-items").addClass('active');
<% end %>

$('.community-content').replaceWith("<%= escape_javascript(render 'pages/home_partials/community_table')%>");