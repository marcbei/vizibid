<% if params[:sort] == "recent" %>
	$(".active-forms-in-feed").removeClass('active');
	$(".recent-forms-in-feed").addClass('active');
<% elsif params[:sort] == "activity" %>
	$(".recent-forms-in-feed").removeClass('active');
	$(".active-forms-in-feed").addClass('active');
<% end %>

$('.feed-content').replaceWith("<%= escape_javascript(render 'pages/home_partials/feed_table')%>");