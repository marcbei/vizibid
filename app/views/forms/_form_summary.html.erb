<div class="row-fluid search-doc-name">
	<%= link_to f.description, f %>
</div>

<div class="row-fluid search-doc-content">
	<% if f.user != nil %>
		<% name = f.user.name.gsub(' ', '_') %>
		uploaded by <%= link_to f.user.name, usershow_path(name.downcase) %>  <%=time_ago_in_words(f.created_at) %> ago
	<% end %>
</div>

<div class="row-fluid search-doc-content">
	<% if !f.average_rating.nan? %>
		average rating <%= f.average_rating.round(2) %> (<%= pluralize(f.form_ratings.count, 'rating') %>)
	<% else %>
		ro ratings
	<% end %>
</div>

<div class="row-fluid search-doc-content">
	<%= pluralize(f.comments.count, 'response') %>
</div>