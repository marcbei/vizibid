<% if f.name != nil %>
	<%= link_to f.name, f %>
<% else %>
	<%= link_to File.basename(f.form.url, File.extname(f.form.url)), f %>
<% end %>

<br/>
<% if f.user != nil %>
	<% name = f.user.name.gsub(' ', '_') %>
	Submitted by: <%= link_to f.user.name, usershow_path(name.downcase) %>
	<br/>
<% end %>


<% if !f.average_rating.nan? %>
	Average Rating: <%= f.average_rating.round(2) %> <br/>
<% end %>

<% if f.jurisdiction %>
	<em><%= f.jurisdiction %></em>
<% end %>

<br/>

<% if f.description %>
	<%= truncante_description(f.description) %>
<% end %>


