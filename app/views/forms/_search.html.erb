<%= form_tag root_path, :method => 'get' do %>
	<%= text_field_tag :search, params[:search], :placeholder => "Search Documents", :class => "searchbox"%>
	<%= submit_tag "Search", :class => "btn btn-info" %>
<% end %>
<p> <em> Can't find what you're looking for? </em>
<% if check_permissions(nil) %>
 	<%= link_to "Request a Document", new_form_request_path %></p>
 <% else %>
 	<%= render 'layouts/noaccess_modal.html.erb', :type => "request" %>
<% end %>